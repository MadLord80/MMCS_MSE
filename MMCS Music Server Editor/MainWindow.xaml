<Window x:Class="MMCS_MSE.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MMCS_MSE"
        mc:Ignorable="d"
        Title="MMCS Music Server Editor" Height="515.094" Width="1166.052" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Window.Resources>
        <ResourceDictionary Source="ExpressionDark.xaml"/>
    </Window.Resources>
    <Grid Background="#FF58585D">
        <Menu x:Name="menu" HorizontalAlignment="Left" Height="24" VerticalAlignment="Top" Width="1160" Background="#FF333333">
            <MenuItem Header="Open">
                <MenuItem Header="AVUNIT directory" Margin="0,0,-56,0" HorizontalAlignment="Left" Width="185" Padding="4,3,2,3" Click="MenuItem_Click"/>
            </MenuItem>
        </Menu>
        <Label x:Name="label" Content="Groups" HorizontalAlignment="Left" Margin="10,124,0,0" VerticalAlignment="Top" Width="178" Foreground="#FFFBEFEF" FontWeight="Bold"/>
        <ListView x:Name="GroupsListView" HorizontalAlignment="Left" Height="310" Margin="10,145,0,0" VerticalAlignment="Top" Width="382" BorderBrush="#FFA8AFBD" MouseUp="GroupsListView_onclick">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Id" DisplayMemberBinding="{Binding id}" Width="30"/>
                    <GridViewColumn Header="Name" DisplayMemberBinding="{Binding name}" Width="240"/>
                    <GridViewColumn DisplayMemberBinding="{Binding lists}" Header="Lists" Width="50"/>
                </GridView>
            </ListView.View>
        </ListView>
        <Label x:Name="label_Copy" Content="Lists" HorizontalAlignment="Left" Margin="417,124,0,0" VerticalAlignment="Top" Width="178" Foreground="#FFFBEFEF" FontWeight="Bold"/>
        <ListView x:Name="ListsListView" HorizontalAlignment="Left" Height="310" Margin="417,145,0,0" VerticalAlignment="Top" Width="382" BorderBrush="#FFA8AFBD">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Id" DisplayMemberBinding="{Binding id}" Width="30"/>
                    <GridViewColumn Header="Name" DisplayMemberBinding="{Binding name}" Width="240"/>
                    <GridViewColumn DisplayMemberBinding="{Binding songs}" Header="Tracks" Width="50"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
